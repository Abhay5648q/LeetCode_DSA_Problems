class Solution {
    public int countNegatives(int[][] grid) {
        int count = 0;
        int m = grid.length;

        for (int i = 0; i < m; i++) {

            int n = grid[0].length;
            int firstNeg = n;
            int low = 0, high = n - 1;
            while (low <= high) {
                int mid = (low + high) / 2;

                if (grid[i][mid] < 0) {
                    firstNeg = mid;
                    high = mid - 1;
                } else {
                    low = mid + 1;
                }
            }
            count += n - firstNeg;

        }
        return count;
    }
}
