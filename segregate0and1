// User function Template for Java

class Solution {
    void segregate0and1(int[] arr) {
        int zero=0,two=0;
       for(int i=0;i<arr.length;i++){
           if(arr[i]==0){
               zero++;
           }
           else{
               two++;
           }
       }
       for(int i=0;i<zero;i++){
           arr[i]=0;
       }
       for(int i=zero;i<arr.length;i++){
           arr[i]=1;
       }
       
    }
}
